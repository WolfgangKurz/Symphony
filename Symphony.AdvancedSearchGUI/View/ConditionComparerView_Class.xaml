<UserControl x:Class="Symphony.AdvancedSearchGUI.View.ConditionComparerView_Class"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Symphony.AdvancedSearchGUI.View"
             xmlns:m="clr-namespace:Symphony.AdvancedSearchGUI.Model"
             xmlns:vm="clr-namespace:Symphony.AdvancedSearchGUI.ViewModel"
             mc:Ignorable="d" 
             d:DesignWidth="200"
             d:DesignHeight="60">
    <UserControl.DataContext>
        <m:ConditionComparer_Class />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ObjectDataProvider x:Key="CompareTypes"
                            MethodName="GetValues"
                            ObjectType="{x:Type m:ConditionCompareHelper_Equal}" />

        <ObjectDataProvider x:Key="ActorClassList"
                            MethodName="GetValues"
                            ObjectType="{x:Type m:ActorClassHelper}" />
        <m:ActorClassConverter x:Key="ActorClassConverter" />
    </UserControl.Resources>
    
    <WrapPanel Orientation="Horizontal">
        <WrapPanel.Resources>
            <Style TargetType="ComboBox">
                <Setter Property="Height" Value="24" />
            </Style>
        </WrapPanel.Resources>
        
        <ComboBox ItemsSource="{Binding Source={StaticResource CompareTypes}}"
                  SelectedValue="{Binding CompareTypeAccessor, Mode=TwoWay}"
                  Width="50"
                  Margin="0,0,5,0" />

        <ComboBox ItemsSource="{Binding Source={StaticResource ActorClassList}}"
                  SelectedValue="{Binding Value, Mode=TwoWay}"
                  Width="80">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource ActorClassConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </WrapPanel>
</UserControl>
